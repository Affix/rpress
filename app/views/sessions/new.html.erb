<h1>Please Login</h1>
<% if flash[:notice] %>
  <div class="notice alert alert-danger"><%= flash[:notice] %></div>
<% end %>
  <%= form_tag sessions_path, class: "form-horizontal" do %>
  <div class="form-group">
    <label for="email">Email address</label>
    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "you@example.com" %>
  </div>
  <div class="form-group">
    <label for="password">Password</label><br />
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>
  </div>
  <div class="pull-right">
    <%= submit_tag 'Sign In', class: "btn btn-default"  %>
  </div>
  <% end %>
